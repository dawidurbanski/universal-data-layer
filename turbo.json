{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".nuxt/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "codegen": {
      "dependsOn": ["^build"],
      "cache": false,
      "passThroughEnv": [
        "UDL_USE_MOCKS",
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN"
      ]
    },
    "typecheck": {
      "dependsOn": ["codegen"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "passThroughEnv": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": []
    },
    "fix": {
      "dependsOn": []
    },
    "changeset": {
      "cache": false
    },
    "version": {
      "cache": false
    },
    "release": {
      "cache": false
    }
  }
}
