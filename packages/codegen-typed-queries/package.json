{
  "name": "@universal-data-layer/codegen-typed-queries",
  "version": "1.0.6",
  "description": "TypedDocumentNode query generation extension for Universal Data Layer (experimental)",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:coverage:file": "vitest run --coverage",
    "lint": "npm run lint:formatting && npm run lint:quality && npm run lint:types",
    "lint:formatting": "prettier --check . --ignore-path ../../.prettierignore",
    "lint:quality": "eslint . --config ../../eslint.config.js",
    "lint:types": "tsc --noEmit",
    "fix": "npm run fix:formatting && npm run fix:quality",
    "fix:formatting": "prettier --write . --ignore-path ../../.prettierignore",
    "fix:quality": "eslint . --fix --config ../../eslint.config.js",
    "typecheck": "tsc --noEmit"
  },
  "author": "Dawid Urbanski <hi@dawidurbanski.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0"
  },
  "peerDependencies": {
    "graphql": "^16.0.0",
    "universal-data-layer": "^1.0.6"
  },
  "devDependencies": {
    "graphql": "^16.11.0",
    "universal-data-layer": "*"
  }
}
