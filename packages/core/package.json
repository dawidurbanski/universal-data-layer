{
  "name": "universal-data-layer",
  "version": "0.1.0",
  "description": "Core library for the Universal Data Layer project",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "universal-data-layer": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node ./bin/cli.js & tsc --watch",
    "start": "node ./bin/cli.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests || true",
    "lint": "npm run lint:formatting && npm run lint:quality && npm run lint:types",
    "lint:formatting": "prettier --check . --ignore-path ../../.prettierignore",
    "lint:quality": "eslint . --config ../../eslint.config.js",
    "lint:types": "tsc --noEmit",
    "fix": "npm run fix:formatting && npm run fix:quality",
    "fix:formatting": "prettier --write . --ignore-path ../../.prettierignore",
    "fix:quality": "eslint . --fix --config ../../eslint.config.js",
    "typecheck": "tsc --noEmit"
  },
  "author": "Dawid Urbanski <hi@dawidurbanski.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "dependencies": {
    "chokidar": "^4.0.3",
    "graphql": "^16.11.0",
    "graphql-http": "^1.22.4",
    "ruru": "^2.0.0-beta.30",
    "tsx": "^4.19.2"
  }
}
